<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">

    <TextView
        android:id="@+id/InformView"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="책 정보 조회"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/titleView2"
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:gravity="end|fill_vertical"
            android:text="제목 :"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_inform"
            android:layout_width="287dp"
            android:layout_height="41dp"
            android:gravity="start|fill_vertical"
            android:inputType="textPersonName"
            android:textSize="19dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/authorView2"
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:gravity="end|fill_vertical"
            android:text="저자 :"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author_inform"
            android:layout_width="287dp"
            android:layout_height="41dp"
            android:gravity="start|fill_vertical"
            android:inputType="textPersonName"
            android:textSize="19dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/inside_inform"
        android:layout_width="377dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="10dp"
        android:textSize="19dp" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="메인"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>